<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:fontFamily="@font/f_regular"
                android:gravity="center"
                android:text="1x"
                android:textColor="#767676"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_semi_bold"
                 android:layout_marginStart="3dp"
                android:textColor="#767676"
                android:textSize="14dp"
                 tools:text="30.000 KD" />
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/f_regular"
                android:lineHeight="18dp"
                android:textAlignment="viewStart"
                 android:layout_marginStart="10dp"
                android:textColor="#767676"
                android:textSize="14dp"
                tools:text="Product Name Product Name Product Name Product Name" />



            <TextView
                android:id="@+id/tvProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_regular"
                android:lineHeight="18dp"
                android:textColor="#505050"
                android:textSize="12dp"
                android:visibility="gone"
                tools:text="Product Details  Product Details  Product Details  Product Details  Product Details  Product Details  Product Details  Product Details  " />

            <TextView
                android:id="@+id/tvProductTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:fontFamily="@font/f_regular"
                 android:textColor="#767676"
                android:textSize="14dp"
                android:layout_marginStart="5dp"
                tools:text="30.000 KD" />
        </LinearLayout>






</LinearLayout>