<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                 android:src="@drawable/ic_logo_back_yellow" />

            <LinearLayout
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="100dp"
                android:layout_weight="1"
                android:background="@drawable/round_top_left_right"
                android:backgroundTint="#fff"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/f_bold"
                    android:text="اختر لغتك المفضلة"
                    android:textColor="@color/text_primaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f_bold"
                    android:text="Select your preferred language"
                    android:textColor="@color/text_primaryDark"
                    android:textSize="18dp" />


                <Button
                    android:id="@+id/btn_en"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/round_white_with_strock_gray"
                    android:fontFamily="@font/f_semi_bold"
                    android:text="English"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvAr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_white_with_strock_gray"
                    android:fontFamily="@font/f_semi_bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="عربى"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
