<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.fragment.bottomMenu.ProfileSettingsFragment">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/top_back"/>
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
          android:src="@drawable/ic_logo_back_yellow" />
    <LinearLayout
        android:id="@+id/llTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
         android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:fontFamily="@font/f_semi_bold"
            android:text="@string/profile_details"
            android:textSize="16dp"
            android:drawableBottom="@drawable/line_bottom"
            android:textColor="@color/colorPrimary"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#8A8895B7"
            android:textSize="16dp"
            android:fontFamily="@font/f_semi_bold"
            android:text="@string/settings"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llTab">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="15dp">

                    <EditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                         android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/user_name"
                        android:inputType="textPersonName"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_user"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />




                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />
                    <Spinner
                        android:id="@+id/spinnerNationality"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@drawable/custom_spiner_light"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/f_regular"
                        android:textSize="16dp"
                        android:paddingStart="55dp"
                        android:paddingEnd="55dp"                        />
                    <EditText
                        android:id="@+id/etDriverLicenseNumber"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/driver_license_number"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_driver_license"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/tvDriverLicenseAttachment"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/driver_license"
                         android:padding="20dp"
                        android:drawableStart="@drawable/ic_driver_license"
                        android:drawableEnd="@drawable/ic_attachment"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />
                    <EditText
                        android:id="@+id/etCivilIdNumber"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/civil_id_number"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_civil_num"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/tvCivilId"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/civil_id"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_civil_num"
                        android:drawableEnd="@drawable/ic_attachment"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />
                    <EditText
                        android:id="@+id/etPassportNumber"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/passport_number"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_passport"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/tvPassport"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/passport"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_passport"
                        android:drawableEnd="@drawable/ic_attachment"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />
                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />


                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_gray"
                        android:fontFamily="@font/f_regular"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:padding="20dp"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:textColorHint="#998895B7"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/round_second"
                        android:backgroundTint="@color/color_second"
                        android:fontFamily="@font/f_bold"
                        android:padding="20dp"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="18dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/f_regular"
                            android:text="@string/already_have_an_account"
                            android:textAllCaps="false"
                            android:textColor="@color/text_primary"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tvLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/f_bold"
                            android:text="@string/login"
                            android:textAllCaps="false"
                            android:textColor="@color/color_second"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbAcceptTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:buttonTint="@color/colorPrimary"
                        android:fontFamily="@font/f_regular"
                        android:gravity="center"
                        android:text="@string/by_creating_an_account_you_agree_to_our_privacy_policy_and_terms_amp_conditions"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10dp"
                        android:visibility="gone"
                        android:checked="true"/>


                </LinearLayout>
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginBottom="-90dp"
                    android:layout_marginStart="-90dp"
                    android:src="@drawable/desh2"/>
            </LinearLayout>
        </ScrollView>

</RelativeLayout>