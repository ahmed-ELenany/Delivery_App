<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/round_with_strock_primary"
            android:backgroundTint="#DFDFDF"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imgi" />
        <LinearLayout
            android:id="@+id/llTimeCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F3F3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    tools:text="6"
                    android:layout_margin="2dp"
                    android:backgroundTint="#E4E4E4"
                    android:background="@drawable/round_smooth_with_strock_"/>

                <TextView
                    android:id="@+id/tvHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    tools:text="6"
                    android:backgroundTint="#E4E4E4"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_smooth_with_strock_"/>


                <TextView
                    android:id="@+id/tvMinutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    tools:text="6"
                    android:backgroundTint="#E4E4E4"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_smooth_with_strock_"/>

                <TextView
                    android:id="@+id/tvSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    tools:text="6"
                    android:backgroundTint="#E4E4E4"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_smooth_with_strock_"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    android:text="@string/day"
                    android:layout_margin="2dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    android:text="@string/hour"
                    android:layout_margin="2dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    android:text="@string/minute"
                    android:layout_margin="2dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/f_semi_bold"
                    android:textColor="#000"
                    android:text="@string/second"
                    android:layout_margin="2dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/f_medium"
            android:lines="1"
            android:text="Huge Mix"
            android:textAlignment="viewStart"
            android:textColor="@color/text_primaryDark"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/f_regular"
            android:lines="2"
            android:textColor="@color/text_second"
            android:textSize="10dp"
            android:visibility="gone"
            tools:text="Assorted Flowers With chocolate in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_bold"
                android:text="22.000 KD"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/f_semi_bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"
                tools:text="20%" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/ic_hot_offer" />


</RelativeLayout>