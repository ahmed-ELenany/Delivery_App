<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_second"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:padding="15dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:padding="5dp"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f_bold"
            android:gravity="center"
            android:text="@string/my_address"
            android:textColor="@color/text_primaryDark"
            android:textSize="18dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMap"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                 android:src="@drawable/map_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/address_name"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etAddressName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_with_strock_primary"
                    android:backgroundTint="#E8E8E8"
                    android:fontFamily="@font/f_regular"
                    android:gravity="start"
                    android:inputType="text"
                     android:hint="@string/enter_address_name"
                    android:lines="1"
                    android:padding="10dp"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/phone_number"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_with_strock_primary"
                    android:backgroundTint="#E8E8E8"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/phone_number"
                    android:textAlignment="viewStart"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/city"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_with_strock_primary"
                    android:backgroundTint="#E8E8E8"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                     android:fontFamily="@font/f_regular"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:spinnerMode="dropdown"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/area"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/spinner_area"
                    android:layout_width="match_parent"
                     android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_height="45dp"
                     android:backgroundTint="#E8E8E8"
                    android:background="@drawable/custom_spiner"
                    android:fontFamily="@font/f_regular"
                    android:gravity="center"
                    android:paddingEnd="20dp"
                    android:spinnerMode="dropdown"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/street"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etStreet"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_with_strock_primary"
                    android:backgroundTint="#E8E8E8"
                    android:fontFamily="@font/f_regular"
                    android:gravity="start"
                    android:hint="@string/street"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/f_bold"
                            android:text="@string/block"
                            android:textColor="@color/colorAccent"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/etBlock"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_with_strock_primary"
                            android:backgroundTint="#E8E8E8"
                            android:layout_weight="1"
                             android:fontFamily="@font/f_regular"
                            android:gravity="start"
                            android:inputType="text"
                            android:hint="@string/block"
                            android:padding="10dp"
                             android:textSize="14dp" />





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/avenue"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etAvenue"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_with_strock_primary"
                    android:backgroundTint="#E8E8E8"
                     android:fontFamily="@font/f_regular"
                    android:hint="@string/avenue"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14dp" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/f_bold"
                            android:text="@string/building_no_apartment_no"
                            android:textColor="@color/colorAccent"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/etBuildingNo"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_with_strock_primary"
                            android:inputType="text"
                            android:backgroundTint="#E8E8E8"
                             android:layout_weight="1"
                             android:fontFamily="@font/f_regular"
                            android:gravity="start"
                            android:hint="@string/building_no_apartment_no"
                            android:padding="10dp"
                            android:textSize="14dp" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/f_bold"
                            android:text="@string/apartment"
                            android:textColor="@color/colorAccent"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/etHouseApartmentNo"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_with_strock_primary"
                            android:inputType="text"
                            android:backgroundTint="#E8E8E8"
                             android:fontFamily="@font/f_regular"
                            android:gravity="start"
                            android:hint="@string/apartment"
                            android:padding="10dp"
                            android:textSize="14dp" />





               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="35dp"
                   android:orientation="horizontal">
                   <Button
                       android:id="@+id/btnSave"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:backgroundTint="@color/colorPrimaryDark"
                       android:background="@drawable/round_primary_dark"
                       android:fontFamily="@font/f_regular"
                       android:padding="10dp"
                       android:text="@string/add_address"
                       android:textAllCaps="false"
                       android:textColor="@color/color_second"
                       android:textSize="16dp"
                       android:layout_weight="1"/>
                   <TextView
                       android:id="@+id/btnDelete"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:backgroundTint="#F44336"
                       android:background="@drawable/round_primary_dark"
                       android:fontFamily="@font/f_regular"
                       android:padding="15dp"
                       android:visibility="gone"
                       android:layout_marginStart="10dp"
                       android:gravity="center"
                       android:text="@string/delete_address"
                       android:textAllCaps="false"
                       android:textColor="@color/color_second"
                       android:textSize="16dp"
                       android:layout_weight="1"/>
               </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>