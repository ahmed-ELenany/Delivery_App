<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_primaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/f_regular"
                android:textColor="#000000"
                android:textSize="12dp"
                tools:text="@string/stores" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/f_regular"
                android:textColor="#000000"
                android:textSize="12dp"
                tools:text=" 00.000 KD" />

            <RadioButton
                android:id="@+id/radioSelect"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:buttonTint="@color/text_primaryDark"
                android:clickable="false" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llQuantity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="3dp"
            android:background="@color/text_primaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNameQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/f_regular"
                android:textColor="#000000"
                android:textSize="12dp"
                tools:text="@string/stores" />

            <TextView
                android:id="@+id/tvPriceQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/f_regular"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12dp"
                tools:text=" 00.000 KD" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQuantityDecrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_extra_gray"
                    android:backgroundTint="#ECECEC"
                    android:fontFamily="@font/f_bold"
                    android:gravity="center_horizontal"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/f_medium"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/text_primaryDark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvQuantityIncrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_extra_gray"
                    android:backgroundTint="#ECECEC"
                    android:fontFamily="@font/f_bold"
                    android:gravity="center_horizontal"
                    android:text="+"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>