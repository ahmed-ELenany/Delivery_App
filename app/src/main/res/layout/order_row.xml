<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:contentPadding="15dp"
     android:elevation="15dp"
    app:cardCornerRadius="15dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivOrderStatus"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_pending_lg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_semi_bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="0D20222215454744" />
            <TextView
                android:id="@+id/tvDeliveryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/f_regular"
                 android:drawableStart="@drawable/ic_pending_sm"
                android:textColor="@color/color_second"
                android:textSize="12dp"
                android:drawablePadding="5dp"
                tools:text="In Process" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_regular"
                android:textColor="#8895B7"
                android:textSize="10dp"
                android:text="25.04.2023" />
            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#A3C6C6C6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_regular"
                android:textColor="#8895B7"
                android:textSize="10dp"
                android:text="25.04.2023" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_semi_bold"
                android:textColor="#8895B7"
                android:textSize="12dp"
                android:text="@string/station_id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_semi_bold"
                android:textColor="#000000"
                android:layout_marginStart="5dp"
                android:textSize="12dp"
                android:text="PWIKWD20551565" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_regular"
                android:textColor="#8895B7"
                android:textSize="10dp"
                android:text="@string/payment_methods2" />

            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_regular"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_second"
                android:textSize="10dp"
                android:text="Cash On Delivery" />
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f_semi_bold"
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                tools:text="-100 KWD" />
        </LinearLayout>






    </LinearLayout>

</LinearLayout>




</androidx.cardview.widget.CardView>