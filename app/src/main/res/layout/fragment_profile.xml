<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.bottomMenu.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/f_bold"
                            android:text="@string/hi"
                            android:textColor="@color/text_primaryDark"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:layout_weight="1"
                            android:fontFamily="@font/f_bold"
                            android:text="Ahmed Elenany"
                            android:layout_marginStart="5dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_primaryDark"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/f_regular"
                        android:textColor="#DCDCDC"
                        android:textSize="16dp"
                        tools:text="abdo.alkout@outlook.com" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llLoginAndSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="@color/text_primaryDark" />

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/f_regular"
                    android:padding="15dp"
                    android:paddingStart="10dp"
                    android:text="@string/sign_in"
                    android:textColor="@color/colorPrimaryDark"

                    android:textSize="18dp"
                    app:drawableEndCompat="@drawable/arrow_i" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_primaryDark" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/f_regular"
                    android:padding="15dp"
                    android:paddingStart="10dp"
                    android:text="@string/sign_up"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    app:drawableEndCompat="@drawable/arrow_i" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_primaryDark" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:id="@+id/llContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/llLoyaltyPoints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/f_bold"
                            android:padding="15dp"
                            android:text="@string/loyalty_points"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tvPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/f_regular"
                            tools:text="600 Points"
                            android:textColor="#3BADA5"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <TextView
                        android:id="@+id/tvAccountDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/f_bold"
                        android:padding="15dp"
                        android:text="@string/change_profile_details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        app:drawableEndCompat="@drawable/arrow_i" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <LinearLayout
                        android:id="@+id/llLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/f_bold"
                            android:padding="15dp"
                            android:text="@string/language"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tvLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/f_regular"
                            android:padding="15dp"
                            android:textColor="#C6181A"
                            android:textSize="16dp"
                            tools:text="English" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <LinearLayout
                        android:id="@+id/llSelectArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/f_bold"
                            android:padding="15dp"
                            android:text="@string/select_area"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tvArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="15dp"
                            android:fontFamily="@font/f_regular"
                            android:padding="15dp"
                            tools:text="New Cairo"
                            android:textColor="#C6181A"
                            android:textSize="16dp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <TextView
                        android:id="@+id/tvOrders"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/f_bold"
                        android:padding="15dp"
                        android:text="@string/order_history"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        app:drawableEndCompat="@drawable/arrow_i" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <TextView
                        android:id="@+id/tvMyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/f_bold"
                        android:padding="15dp"
                        android:text="@string/my_address"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        app:drawableEndCompat="@drawable/arrow_i" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <TextView
                        android:id="@+id/tvFAQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/f_bold"
                        android:padding="15dp"
                        android:text="@string/faq"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        app:drawableEndCompat="@drawable/arrow_i" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <TextView
                        android:id="@+id/tvTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/f_bold"
                        android:padding="15dp"
                        android:text="@string/terms_amp_conditions"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        app:drawableEndCompat="@drawable/arrow_i" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D3D3D3" />

                    <TextView
                        android:id="@+id/tvLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/f_bold"
                        android:padding="15dp"
                        android:text="@string/logout"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        app:drawableEndCompat="@drawable/logout" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>