<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:padding="5dp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/f_bold"
                android:gravity="center"
                android:text="@string/register"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text_primary"
                android:textSize="18dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                 >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                     android:src="@drawable/ic_logo_back_yellow" />



                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/user_name"
                    android:inputType="textPersonName"
                    android:padding="20dp"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:textColorHint="#fff"
                    android:textSize="16dp" />




                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:textColorHint="#fff"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:padding="20dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:textColorHint="#fff"
                    android:textSize="16dp" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_spiner"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/f_regular"
                    android:textSize="16dp"
                    android:padding="35dp"
                    />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:textColorHint="#fff"
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:textColorHint="#fff"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/round_second"
                    android:backgroundTint="@color/color_second"
                     android:fontFamily="@font/f_bold"
                    android:padding="20dp"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    android:textSize="18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/f_regular"
                        android:text="@string/already_have_an_account"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/f_bold"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/color_second"
                        android:textSize="16dp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/rbAcceptTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/f_regular"
                    android:gravity="center"
                    android:text="@string/by_creating_an_account_you_agree_to_our_privacy_policy_and_terms_amp_conditions"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:checked="true"/>


            </LinearLayout>
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                     android:layout_marginBottom="-90dp"
                    android:layout_marginStart="-90dp"
                     android:src="@drawable/desh2"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>