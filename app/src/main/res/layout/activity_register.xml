<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_second"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:padding="5dp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/f_bold"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/text_primaryDark"
                android:textSize="18dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_logo_text_icon"
                    app:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/f_bold"
                        android:text="@string/register"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tvSkip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/f_medium"
                        android:text="@string/skip"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp" />
                </LinearLayout>


                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />


                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/enter_email_address"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/enter_mobile_number"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textAlignment="viewStart"

                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />


                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textAlignment="viewStart"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/round_gray"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:fontFamily="@font/f_bold"
                    android:padding="5dp"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@color/color_second"
                    android:textSize="18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/f_regular"
                        android:text="@string/don_t_have_an_account"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/f_bold"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/rbAcceptTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/f_regular"
                    android:gravity="center"
                    android:text="@string/by_creating_an_account_you_agree_to_our_privacy_policy_and_terms_amp_conditions"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>