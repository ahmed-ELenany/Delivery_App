<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_second"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:padding="15dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:padding="5dp"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f_bold"
            android:gravity="center"
            android:text="@string/select_area"
            android:textColor="@color/text_primaryDark"
            android:textSize="18dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMap"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/map_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="25dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/city"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_with_strock_primary"
                    android:backgroundTint="#E8E8E8"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                     android:fontFamily="@font/f_regular"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:spinnerMode="dropdown"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/f_bold"
                    android:text="@string/area"
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/spinner_area"
                    android:layout_width="match_parent"
                     android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_height="45dp"
                     android:backgroundTint="#E8E8E8"
                    android:background="@drawable/custom_spiner"
                    android:fontFamily="@font/f_regular"
                    android:gravity="center"
                    android:paddingEnd="20dp"
                    android:spinnerMode="dropdown"
                    android:textSize="14dp" />






                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@drawable/round_primary_dark"
                    android:fontFamily="@font/f_bold"
                    android:padding="10dp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/color_second"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>