<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_second"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:padding="5dp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/f_bold"
                android:gravity="center"
                android:text="@string/change_password"
                android:textColor="@color/text_primaryDark"
                android:textSize="18dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/f_semi_bold"
                    android:text="@string/old_password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etOldPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/f_semi_bold"
                    android:text="@string/new_password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/f_semi_bold"
                    android:text="@string/confirm_password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/etOldConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_gray"
                    android:fontFamily="@font/f_regular"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColorHint="#A8A6A6"
                    android:textSize="14dp" />


                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_primary_dark"
                    android:backgroundTint="@color/colorPrimaryDark"                    android:fontFamily="@font/f_bold"
                    android:padding="10dp"
                    android:text="@string/update"
                    android:textAllCaps="false"
                    android:textColor="@color/color_second"
                    android:textSize="18dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>